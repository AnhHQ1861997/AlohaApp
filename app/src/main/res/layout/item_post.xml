<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_post_background_layout">

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/default_avatar"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ivAvatar"
                android:background="@color/colorWhite"
                android:text="Tên người dùng"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvName"
                android:layout_below="@id/tvName"
                android:text="Vừa xong"
                android:textColor="@color/colorGray"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivAvatar"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:maxLines="5"
                android:text="Đây là một trạng thái" />

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tvStatus"
                android:layout_below="@id/tvStatus"
                android:text="Đọc tiếp..."
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layoutTop"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="1000dp"
                android:layout_height="50dp"
                android:layout_weight="1">

                <com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/btFavorite"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    app:mfb_type="heart" />

                <TextView
                    android:id="@+id/tvFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/btFavorite"
                    android:layout_alignTop="@id/btFavorite"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/btFavorite"
                    android:gravity="center_vertical"
                    android:text="0 yêu thích" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutComment"
                android:layout_width="1000dp"
                android:layout_height="50dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivComment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/ivComment"
                    android:gravity="center_vertical"
                    android:text="0 bình luận" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>